  void addNeighbor(Node a, Node b) {
    char dir = 'r', opos = 'l';
    
    if(a.pos.x == b.pos.x) {
      dir = 'd';
      opos = 'u';
    }
    if(a.pos.y == b.pos.y) {
      dir = 'r';
      opos = 'l';
    }
    a.addNeighbor(b, dir);
    b.addNeighbor(a, opos);
  }
  
  
